{
  "name": "@kurone-kito/builder-config",
  "version": "0.20.0",
  "private": true,
  "description": "The boilerplate project of the Node.js",
  "keywords": [
    "boilerplate",
    "pnpm",
    "template"
  ],
  "homepage": "https://github.com/kurone-kito/builder-config#readme",
  "bugs": "https://github.com/kurone-kito/builder-config/issues",
  "repository": "github:kurone-kito/builder-config",
  "license": "MIT",
  "author": "kurone-kito <krone@kit.black> (https://kit.black/)",
  "type": "module",
  "files": [],
  "workspaces": {
    "packages": [
      "./packages/*"
    ]
  },
  "scripts": {
    "build": "pnpm --aggregate-output --if-present --workspace-concurrency=0 -r run build",
    "build:sea": "pnpm --filter \"@kurone-kito/example-cli\" run build:sea",
    "clean": "pnpm run --no-bail \"/^clean:.+/\"",
    "clean:root": "rimraf -g \"*.tgz\" \"*.tsbuildinfo\" coverage node_modules/.cache",
    "clean:sub": "pnpm --aggregate-output --if-present --parallel --workspace-concurrency=0 -r run clean",
    "cli": "example-cli",
    "dev": "pnpm --parallel --workspace-concurrency=Infinity -r run dev",
    "is:prerelease": "scripts/isPrerelease.mjs $(npm pkg get version) pre",
    "is:release": "scripts/isPrerelease.mjs $(npm pkg get version)",
    "lint": "pnpm run \"/lint:.+:check/\"",
    "lint:biome:check": "biome check",
    "lint:biome:fix": "biome check --write",
    "lint:cspell:check": "cspell lint --no-progress --show-suggestions -u \"./**/*\"",
    "lint:fix": "pnpm run \"/lint:.+:fix/\"",
    "lint:markdown:check": "markdownlint-cli2 \"**/*.md\"",
    "lint:markdown:fix": "markdownlint-cli2 --fix \"**/*.md\"",
    "prebuild:sea": "pnpm --aggregate-output --if-present --workspace-concurrency=0 --filter \"!@kurone-kito/example-cli\" run build",
    "postlint:fix": "pnpm run lint:cspell:check",
    "pnpm:devPreinstall": "pnpm --if-present --workspace-concurrency=0 -r run devPreinstall",
    "predev": "pnpm run build",
    "prepare": "husky",
    "pretest": "pnpm run build",
    "publish": "pnpm -r publish --no-git-checks",
    "publish:next": "pnpm -r publish --tag next --no-git-checks",
    "test": "pnpm run --no-bail \"/^test:.+/\"",
    "test:ts": "pnpm --aggregate-output --workspace-concurrency=0 --filter '!*typescript-config' exec tsc -p tsconfig.test.json --noEmit",
    "test:vitest": "vitest run --coverage"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cspell/cspell-types": "^9.2.1",
    "@kurone-kito/biome-config": "^0.21.0",
    "@kurone-kito/commitlint-config": "^0.21.0",
    "@kurone-kito/cspell-config": "^0.21.0",
    "@kurone-kito/example-cli": "workspace:^",
    "@kurone-kito/lint-staged-config": "^0.21.0",
    "@kurone-kito/markdownlint-config": "^0.21.0",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cspell": "^9.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "markdownlint-cli2": "^0.18.1",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2",
    "typescript": "~5.9.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.18.0+sha512.e804f889f1cecc40d572db084eec3e4881739f8dec69c0ff10d2d1beff9a4e309383ba27b5b750059d7f4c149535b6cd0d2cb1ed3aeb739239a4284a68f40cfa",
  "engines": {
    "node": "^20.11 || ^22 || >=24"
  },
  "publishConfig": {
    "access": "public"
  }
}
